---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const docs = await getCollection('docs');
const blogs = await getCollection('blogs');

const sidebarItems = [
  ...docs.map((d) => {
    const s = d.id.replace(/\.md$/, '');
    return { href: `/docs/${s}`, label: d.data.title ?? s, active: false };
  }),
  ...blogs.map((b) => {
    const s = b.id.replace(/\.md$/, '');
    return { href: `/blogs/${s}`, label: b.data.title ?? s, active: false };
  }),
];
---

<Layout title="OpenStoat" sidebarItems={sidebarItems} currentSection="home">
  <div class="prose max-w-none">
    <div class="mb-12">
      <h1 class="text-4xl font-bold tracking-tight text-black">OpenStoat</h1>
      <p class="text-xl text-[#404040] mt-2">
        Agent-first AI and Human collaborative task orchestration system.
      </p>
      <p class="mt-4 text-[#404040]">
        Local-first, CLI-first. No account or API key required. OpenStoat orchestrates tasks between AI agents and humansâ€”agents execute by default, humans join when needed.
      </p>
      <div class="flex gap-4 mt-6 not-prose">
        <a href="/docs" class="inline-flex items-center px-4 py-2 border-2 border-black bg-black text-white font-medium hover:bg-white hover:text-black transition">
          Documentation
        </a>
        <a href="/blogs" class="inline-flex items-center px-4 py-2 border-2 border-black text-black font-medium hover:bg-black hover:text-white transition">
          Blog
        </a>
      </div>
    </div>
    <section>
      <h2 class="text-black">Quick Links</h2>
      <div class="grid gap-6 sm:grid-cols-2 not-prose mt-4">
        <a href="/docs" class="block p-4 border-2 border-black hover:bg-[#e5e5e5] transition">
          <h3 class="font-semibold text-black">Documentation</h3>
          <p class="text-sm text-[#404040] mt-1">Product spec, architecture, use cases, and development guides.</p>
        </a>
        <a href="/blogs" class="block p-4 border-2 border-black hover:bg-[#e5e5e5] transition">
          <h3 class="font-semibold text-black">Blog</h3>
          <p class="text-sm text-[#404040] mt-1">Stories, updates, and insights about OpenStoat.</p>
        </a>
      </div>
    </section>
  </div>
</Layout>
