---
/**
 * GitBook-style breadcrumb navigation for doc hierarchy.
 * Pixel art aesthetic: black and white.
 */
interface Crumb {
  href: string;
  label: string;
}

interface Props {
  items: Crumb[];
}

const { items } = Astro.props;
---

{items.length > 0 && (
  <nav class="mb-6" aria-label="Breadcrumb">
    <ol class="flex flex-wrap items-center gap-2 text-sm font-pixel-body" style="color: var(--pixel-muted);">
      {items.map((item, i) => (
        <li class="flex items-center gap-2">
          {i > 0 && (
            <svg
              class="w-4 h-4"
              style="color: var(--pixel-muted);"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="square"
                stroke-linejoin="miter"
                stroke-width="2"
                d="M9 5l7 7-7 7"
              />
            </svg>
          )}
          {i < items.length - 1 ? (
            <a
              href={item.href}
              class="hover:opacity-80 transition"
              style="color: var(--pixel-fg);"
            >
              {item.label}
            </a>
          ) : (
            <span class="font-medium" style="color: var(--pixel-fg);">
              {item.label}
            </span>
          )}
        </li>
      ))}
    </ol>
  </nav>
)}
