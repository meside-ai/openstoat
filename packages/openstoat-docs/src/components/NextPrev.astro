---
/**
 * GitBook-style next/previous page navigation at the bottom of doc pages.
 */
interface NavItem {
  href: string;
  label: string;
}

interface Props {
  prev?: NavItem | null;
  next?: NavItem | null;
}

const { prev, next } = Astro.props;
---

{(prev || next) && (
  <nav
    class="mt-12 pt-8 border-t-2 border-black flex flex-wrap gap-4 justify-between"
    aria-label="Page navigation"
  >
    <div class="flex-1 min-w-0">
      {prev ? (
        <a
          href={prev.href}
          class="group flex items-center gap-2 text-[#404040] hover:text-black transition-colors"
        >
          <svg
            class="w-5 h-5 shrink-0 group-hover:-translate-x-0.5 transition-transform"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M15 19l-7-7 7-7"
            />
          </svg>
          <div class="min-w-0">
            <span class="text-xs font-medium text-[#404040] uppercase">
              Previous
            </span>
            <p class="font-medium truncate">{prev.label}</p>
          </div>
        </a>
      ) : (
        <span />
      )}
    </div>
    <div class="flex-1 min-w-0">
      {next ? (
        <a
          href={next.href}
          class="group flex items-center gap-2 text-[#404040] hover:text-black transition-colors ml-auto justify-end"
        >
          <div class="min-w-0 text-right">
            <span class="text-xs font-medium text-[#404040] uppercase">
              Next
            </span>
            <p class="font-medium truncate">{next.label}</p>
          </div>
          <svg
            class="w-5 h-5 shrink-0 group-hover:translate-x-0.5 transition-transform"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M9 5l7 7-7 7"
            />
          </svg>
        </a>
      ) : (
        <span />
      )}
    </div>
  </nav>
)}
